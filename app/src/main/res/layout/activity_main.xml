<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background_light">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/true_illustration"
        android:contentDescription="@string/app_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_subtitle"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3" />

    <Button
        android:id="@+id/btn_language"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/toggle_language"
        android:textColor="@color/text_white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/button_secondary_background"
        android:layout_marginBottom="20dp"
        android:letterSpacing="0.02"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_start_monitoring"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/start_monitoring"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary_background"
        android:layout_marginBottom="16dp"
        android:letterSpacing="0.02"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_user_info"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/update_personal_info"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary_background"
        android:layout_marginBottom="16dp"
        android:letterSpacing="0.02"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/settings"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary_background"
        android:letterSpacing="0.02"
        android:gravity="center" />

</LinearLayout>
