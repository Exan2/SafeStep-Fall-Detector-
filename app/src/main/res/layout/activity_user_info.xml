<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Centered header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_info_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_red"
            android:letterSpacing="0.02"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_info_warning"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:lineSpacingMultiplier="1.2"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <!-- Fields (more compact) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_marginBottom="8dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                style="@style/InputField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="@string/name_hint"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:autofillHints="name"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_field_background" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date of Birth -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                style="@style/InputField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_dob"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="@string/dob_hint"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_field_background" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- ID Number -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                style="@style/InputField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="@string/id_hint"
                    android:inputType="number"
                    android:maxLength="20"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:autofillHints="postalCode"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_field_background" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Blood Type -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                style="@style/InputField">

                <AutoCompleteTextView
                    android:id="@+id/et_blood_type"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="@string/blood_type_hint"
                    android:inputType="none"
                    android:focusable="true"
                    android:clickable="true"
                    android:completionThreshold="0"
                    android:dropDownHeight="200dp"
                    android:popupBackground="@android:color/white"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_field_background" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Wilaya -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                style="@style/InputField">

                <AutoCompleteTextView
                    android:id="@+id/et_wilaya"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="@string/wilaya_hint"
                    android:inputType="none"
                    android:focusable="true"
                    android:clickable="true"
                    android:completionThreshold="0"
                    android:dropDownHeight="200dp"
                    android:popupBackground="@android:color/white"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_field_background" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Daira -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                style="@style/InputField">

                <AutoCompleteTextView
                    android:id="@+id/et_daira"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="@string/daira_hint"
                    android:inputType="none"
                    android:focusable="true"
                    android:clickable="true"
                    android:completionThreshold="0"
                    android:dropDownHeight="200dp"
                    android:popupBackground="@android:color/white"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:imeOptions="actionNext"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_field_background" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Phone -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                style="@style/InputField">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="@string/phone_hint"
                    android:inputType="phone"
                    android:maxLength="9"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:imeOptions="actionDone"
                    android:autofillHints="phone"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_field_background" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/save_button"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary_background"
            android:letterSpacing="0.02"
            android:gravity="center" />

    </LinearLayout>

</ScrollView>
